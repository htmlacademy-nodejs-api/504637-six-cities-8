{
  "name": "six-cities",
  "version": "7.0.0",
  "description": "Project `Six Cities` from HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start:dev": "nodemon",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=--no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock:server": "json-server mocks/mock-server-data.json --port 4000 --host localhost"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10"
  },
  "dependencies": {
    "@typegoose/typegoose": "12.8.0",
    "chalk": "5.3.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "convict": "6.2.4",
    "cors": "2.8.5",
    "dayjs": "1.11.13",
    "dotenv": "16.4.5",
    "express": "4.21.1",
    "express-async-handler": "1.2.0",
    "express-static": "1.2.6",
    "got": "14.4.2",
    "http-status-codes": "2.3.0",
    "inversify": "6.0.2",
    "jose": "5.9.6",
    "mime-types": "2.1.35",
    "mongoose": "8.7.0",
    "multer": "1.4.5-lts.1",
    "nodemon": "3.1.7",
    "pino": "9.4.0",
    "reflect-metadata": "0.2.2"
  },
  "devDependencies": {
    "@types/convict": "6.1.6",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/got": "9.6.12",
    "@types/mime-types": "2.1.4",
    "@types/multer": "1.4.12",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "1.0.0-beta.2",
    "pino-pretty": "11.2.2",
    "rimraf": "5.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.7.0",
    "typescript": "5.4.5"
  }
}
